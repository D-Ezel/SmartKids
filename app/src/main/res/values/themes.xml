<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.SmartKid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/teal_700</item>
    <item name="colorPrimaryVariant">@color/transparent</item>
    <item name="colorOnPrimary">@color/defaultGray</item>
    <item name="android:textColorPrimary">@color/defaultGray</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.SmartKid.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.SmartKid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.SmartKid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>