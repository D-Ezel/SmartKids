<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="250dp"
  xmlns:app="http://schemas.android.com/apk/res-auto">
  
  <ImageView
    android:id="@+id/imgEducGames"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:src="@drawable/guess_animal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

  <ImageView
    android:id="@+id/bg_gradient"
    android:layout_width="match_parent"
    android:layout_height="104dp"
    android:background="@drawable/bg_gradient"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
  />

  <soup.neumorphism.NeumorphButton
    android:id="@+id/btn_play"
    style="@style/Widget.Neumorph.Button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Play"
    android:textAllCaps="true"
    android:textSize="12sp"
    android:layout_marginStart="5dp"
    android:layout_marginBottom="10dp"
    android:textColor="@color/textColorBtnHome"
    app:neumorph_backgroundColor="@color/white"
    app:neumorph_shadowColorLight="@color/transparent"
    app:neumorph_shadowColorDark="@color/textColorBtnHome"
    app:neumorph_shadowElevation="2dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
  />

  <TextView
    android:id="@+id/title_game"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="44dp"
    android:layout_marginStart="16dp"
    android:text="Guess Animal"
    android:textColor="@color/white"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
  />

  <TextView
    android:id="@+id/author_game"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="25dp"
    android:text="Diary"
    android:textColor="@android:color/darker_gray"
    android:textSize="12sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/title_game"
    />




</androidx.constraintlayout.widget.ConstraintLayout>